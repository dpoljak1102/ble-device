<UserControl x:Class="CtrlBluetoothLE.Views.LoadingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CtrlBluetoothLE.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <!-- Style="{StaticResource CircularProgressBar}"-->
        <ProgressBar x:Name="ProgressBar"
                     Foreground="{StaticResource ProgressBar.Progress}"
                     HorizontalAlignment="Stretch"
                     VerticalAlignment="Center"
                     Width="120"
                     Height="120"
                     IsIndeterminate="True"
                     Style="{StaticResource CircularProgressBar}" />

        <TextBlock Text="Loading"
                   Foreground="{StaticResource ActiveFontBrush}"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="18"
                   FontFamily="Arial" />
    </Grid>
</UserControl>
